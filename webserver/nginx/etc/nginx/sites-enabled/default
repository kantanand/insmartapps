server {
    listen 80 default_server;
    server_name [SERVER_NAME];
    access_log      /var/log/nginx/learning.access.log;
    error_log       /var/log/nginx/learning.error.log;
    keepalive_timeout    70;
    root /home/ubuntu/;

    location /protected/ {
        internal;
        alias /home/ubuntu/media/;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://127.0.0.1:8000;
    }

    location /static/ {
        try_files $uri /;
    }

}

server{
    listen 443;
    server_name [SERVER_NAME];
    client_max_body_size 50M;
    ssl on;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    access_log      /var/log/nginx/learning.access.log;
    error_log       /var/log/nginx/learning.error.log;
    #ssl_certificate      /etc/ssl/learning/learning.crt;
    #ssl_certificate_key  /etc/ssl/learning/learning.key;
    add_header           Front-End-Https    on;
    keepalive_timeout    70;
    root /home/ubuntu/;

    location /protected/ {
        internal;
        alias /home/ubuntu/media/;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://127.0.0.1:8000;
    }

    location /static/ {
        try_files $uri /;
    }

}